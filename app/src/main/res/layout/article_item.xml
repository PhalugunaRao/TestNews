<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/article_item.xml -->
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/article_big_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:src="@drawable/ic_launcher_background"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
              >

                <TextView
                    android:id="@+id/article_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="1H"
                    android:textColor="@color/published"
                    android:fontFamily="@font/librefranklin_regular" />

                <TextView
                    android:id="@+id/article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textColor="@color/title_color"
                    android:fontFamily="@font/librefranklin_semibold"
                    tools:text="Mars One dreams plummet back to Earth as
company goes bankrupt"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/article_small_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />


        </LinearLayout>

    </LinearLayout>
</layout>
